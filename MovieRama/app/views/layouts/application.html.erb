<!DOCTYPE html>
<html>
<head>
  <title>MovieRama</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class = "navbar navabar-default">
		<div class="container">
			<div class="navbar-header">
				<%= link_to("MovieRama", root_path, class: "navbar-brand")%>
			</div>
			<ul class="nav navbar-nav navbar-right">
				<% if user_signed_in?%>
					Welcome Back <%= link_to(current_user.first_name + " " +current_user.last_name, submits_path(user: current_user.id))%> | 
					<%= link_to("Sign Out", destroy_user_session_path, method: :delete)%>
				<% else %>
					<%= link_to("Log In", new_user_session_path) %> or
					<%= link_to("Sign Up", new_user_registration_path, class: "btn btn-primary", id: "sign-up")%>
				<% end %>
			</ul>
		</div>
	</nav>

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
	<%= yield %>

</body>
</html>
